<%- include("./partials/admin/_header.ejs")  %>
<!-- partial -->
 <div class="container-fluid page-body-wrapper">
  <!-- partial:partials/_sidebar.html -->
  <%- include("./partials/admin/_sidebar.ejs")  %>
  <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="page-header">
                        <h3 class="page-title"> All Users </h3>
                        <nav aria-label="breadcrumb">
                          <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/deshboard">Deshboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Users</li>
                          </ol>
                        </nav>
                      </div>

                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th> Sr No.</th>
                          <th> Name </th>
                          <th> Email </th>
                          <th> Mobile No. </th>
                          <th> Status</th>
                          <th> Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        
                       <%  allUser.forEach(function(user, index) { 
                           if( user.role != 1) { %>
                        <tr>
                            <td> <%= index %>  </td>
                            <td class="py-1">
                              <img src="../publics/assets/images/faces-clipart/pic-1.png" alt="image" />
                               <span> <%= user.fname %> </span></td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td> <%= user.phone %> </td>
                            <td> <%= user.subscribed %> </td>
                            <td style="display:flex">
                              <div class="col-sm-6">
                                  <a href="#"><i class="mdi mdi-table-edit"></i></a>
                              </div>
                              <div class="col-sm-6">
                                 <a href="/delete-user/<%= user._id %>"><i class="mdi mdi-delete-forever"></i></a> 
                              </div>
                              </td>
                          </tr>
                       <% } }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
   </div> 
    <!-- content-wrapper ends -->
    <%- include("./partials/admin/_footer.ejs")  %>